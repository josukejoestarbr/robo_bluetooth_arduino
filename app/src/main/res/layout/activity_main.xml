<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Status" />

            <Space
                android:layout_width="102dp"
                android:layout_height="107dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/config"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="Configurar"
                android:textColor="@color/white" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <Button
                android:id="@+id/descon"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="Descon" />

            <Space
                android:layout_width="86dp"
                android:layout_height="37dp" />

            <Button
                android:id="@+id/habilitar"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="Conectar" />

            <Space
                android:layout_width="24dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="45dp"
                android:layout_height="76dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/frente"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/manipular_frente" />

            <Space
                android:layout_width="42dp"
                android:layout_height="39dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="horizontal" >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/esquerda"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/manipular_esquerda" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/Parar"
                android:layout_width="94dp"
                android:layout_height="109dp"
                android:layout_weight="1"
                android:background="@drawable/stop" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/direita"
                android:layout_width="101dp"
                android:layout_height="145dp"
                android:layout_weight="1"
                android:background="@drawable/manipulardireita" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/tras"
                android:layout_width="26dp"
                android:layout_height="106dp"
                android:layout_weight="1"

                android:background="@drawable/manipular_tras" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Space
                        android:layout_width="58dp"
                        android:layout_height="60dp" />

                    <Button
                        android:id="@+id/Voz"
                        android:textColor="@color/white"
                        android:background="@color/blue"
                        android:layout_width="74dp"
                        android:layout_height="wrap_content"
                        android:text="Voz" />

                    <Space
                        android:layout_width="52dp"
                        android:layout_height="38dp" />

                    <Button
                        android:id="@+id/Sequencia"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@color/blue"
                        android:text="sequencia"
                        android:textColor="@color/white" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>